<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <TextView android:id="@+id/fetched"
            style="@style/def_label"/>

  <TextView android:id="@+id/updated"
            style="@style/def_label"/>

  <TextView android:id="@+id/places"
            style="@style/def_label"/>

  <TextView style="@style/def_label"
            android:text="@string/info_last_data"/>

  <TextView android:id="@+id/data"
            style="@style/def_label"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:singleLine="false"/>

  <Button android:id="@+id/refresh_now"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="@string/info_refresh_now"
          android:visibility="gone"/>
</LinearLayout>